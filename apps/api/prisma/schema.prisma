// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  TECHNICIAN
  CUSTOMER
}

enum DeviceStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  DELIVERED
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
  CANCELLED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  password        String
  role            Role
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  devices         Device[]  @relation("DeviceOwner")
  assignedDevices Device[]  @relation("DeviceAssignee")

  @@map("users")
}

model Device {
  id            String        @id @default(cuid())
  brand         String
  model         String
  serialNumber  String        @unique
  status        DeviceStatus  @default(PENDING)
  price         Float?        @default(0)
  ownerId       String
  assigneeId    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  owner         User          @relation("DeviceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  assignee      User?         @relation("DeviceAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  logs          DeviceLog[]
  tickets       Ticket[]

  @@map("devices")
}

model DeviceLog {
  id        String   @id @default(cuid())
  deviceId  String
  message   String
  createdAt DateTime @default(now())

  // Relations
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@map("device_logs")
}

model Ticket {
  id                String         @id @default(cuid())
  deviceId          String
  issueDescription  String
  status            TicketStatus   @default(OPEN)
  priority          TicketPriority @default(MEDIUM)
  estimatedCost     Float?
  dueDate           DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt

  // Relations
  device            Device         @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  ticketParts       TicketPart[]

  @@map("tickets")
}

model Part {
  id            String       @id @default(cuid())
  name          String
  sku           String?      @unique
  stockQuantity Int          @default(0)
  price         Float        @default(0)
  cost          Float        @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  ticketParts   TicketPart[]

  @@map("parts")
}

model TicketPart {
  id        String   @id @default(cuid())
  ticketId  String
  partId    String
  quantity  Int
  createdAt DateTime @default(now())

  // Relations
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  part      Part     @relation(fields: [partId], references: [id], onDelete: Cascade)

  @@unique([ticketId, partId]) // Prevent duplicate part assignments to same ticket
  @@map("ticket_parts")
}

